{% extends "base.html.twig" %}
{% block title %}Connexion{% endblock %}
{% block contenu %}
    {% if form.valide is defined %}
        {% if form.valide == true %}
            <h1>Connexion r√©ussie</h1>
            <h1>Votre adresse mail : {{form.email}}</h1>

        {% else %}
            <h1>Login ou mot de passe incorrect</h1>
            <h1>Se connecter</h1>
            <form action="index.php?page=connexion" method="post" enctype="application/x-www-form-urlencoded">
                <div class="form-group">
                    <label for="email">Adresse mail</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
                    <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais vos informations de connexion.</small>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                    <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                </div>
            <button name="btConnexion" type="submit" class="btn btn-primary">Connexion</button>
        </form>
        {% endif %}
    {% else %}
        <h1 class="text-center">Se connecter</h1>
        <div class="row h-75 justify-content-center align-items-center">
            <form action="index.php?page=connexion" method="post" enctype="application/x-www-form-urlencoded">
                <div class="form-group">
                    <label for="email">Adresse mail</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
                    <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais vos informations de connexion.</small>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                    <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                </div>
                <button name="btConnexion" type="submit" class="btn btn-primary">Connexion</button>
            </form>
        </div>
    {% endif %}
{% endblock %}